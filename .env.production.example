# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://jarvis:STRONG_PASSWORD@db:5432/jarvis_prod
TEST_DATABASE_URL=postgresql://jarvis:STRONG_PASSWORD@db:5432/jarvis_test
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_IDLE=30000

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_KEY
JWT_REFRESH_SECRET=REPLACE_WITH_STRONG_REFRESH_SECRET
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Apple Sign In Configuration
APPLE_TEAM_ID=your-production-apple-team-id
APPLE_KEY_ID=your-production-apple-key-id
APPLE_PRIVATE_KEY_PATH=/etc/jarvis/certs/apple-private-key.p8
APPLE_CLIENT_ID=com.yourcompany.jarvis

# AI Service Configuration
AI_SERVICE_URL=http://ai-service:8000
OPENAI_API_KEY=your-production-openai-api-key
ANTHROPIC_API_KEY=your-production-anthropic-api-key

# Research Engine Configuration
RESEARCH_ENGINE_URL=http://research-engine:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_PATH=/var/log/jarvis-api.log

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/data/uploads

# WebSocket Configuration
WS_PORT=3002

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
