# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/jarvis_dev
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/jarvis_test
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE=10000

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Apple Sign In Configuration
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./certs/apple-private-key.p8
APPLE_CLIENT_ID=com.yourcompany.jarvis

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Research Engine Configuration
RESEARCH_ENGINE_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/jarvis-api.log

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# WebSocket Configuration
WS_PORT=3002

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
