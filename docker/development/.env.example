# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://jarvis:jarvis123@db:5432/jarvis_dev
TEST_DATABASE_URL=postgresql://jarvis:jarvis123@db:5432/jarvis_test
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE=10000

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Apple Sign In Configuration
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./certs/apple-private-key.p8
APPLE_CLIENT_ID=com.yourcompany.jarvis

# AI Service Configuration
AI_SERVICE_URL=http://ai-service:8000
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Research Engine Configuration
RESEARCH_ENGINE_URL=http://research-engine:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/jarvis-api.log

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# WebSocket Configuration
WS_PORT=3002

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Docker-specific overrides (optional)
POSTGRES_DB=jarvis_dev
POSTGRES_USER=jarvis
POSTGRES_PASSWORD=jarvis123
API_PORT=3000
DB_PORT=5432
REDIS_PORT=6379
AI_SERVICE_PORT=8000
RESEARCH_ENGINE_PORT=3001
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081
